loadplugins '\.(js|penta)$'
set complete=
set autocomplete=
set defsearch=
set noincfind
set history=0
set visualbell

nmap . <nop>
nmap a <nop>
nmap b <nop>
nmap i <nop>
nmap m <nop>
nmap p <nop>
nmap q <nop>
nmap s <nop>
nmap u <nop>
nmap w <nop>
nmap z <nop>

nmap A <nop>
nmap B <nop>
nmap S <nop>
nmap W <nop>
nmap Y <nop>
nmap Z <nop>

map <C-t> :tabopen<CR>
map <esc> :stop<CR>
map <f2> :dialog console<CR>
map <C-l> gt
map <C-h> gT
map P :pintab<CR>

hi FontFixed -a font: 16px "Terminus"; font-weight: bold; !important;
hi FontCode -a font: 16px "Terminus"; font-weight: bold; !important;
